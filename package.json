{
  "name": "mfe-react",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "host:nextjs": "yarn workspace @mfe-react/host-nextjs dev",
    "host:vite": "yarn workspace @mfe-react/host-react-vite dev",
    "host:webpack": "yarn workspace @mfe-react/host-react-webpack dev",
    "remote:nextjs": "yarn workspace @mfe-react/remote-nextjs dev",
    "remote:vite": "yarn workspace @mfe-react/remote-react-vite dev",
    "remote:webpack": "yarn workspace @mfe-react/remote-react-webpack dev",
    "mfe:nextjs": "concurrently \"yarn host:nextjs\" \"yarn remote:nextjs\" \"yarn remote:vite\" \"yarn remote:webpack\"",
    "mfe:vite": "concurrently \"yarn host:vite\" \"yarn remote:nextjs\" \"yarn remote:vite\" \"yarn remote:webpack\"",
    "mfe:webpack": "concurrently \"yarn host:webpack\" \"yarn remote:nextjs\" \"yarn remote:vite\" \"yarn remote:webpack\""
  },
  "workspaces": {
    "nohoist": [
      "packages/hosts/**/**",
      "packages/remotes/**/**"
    ],
    "packages": [
      "packages/hosts/*",
      "packages/remotes/*"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
