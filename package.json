{
  "name": "mfe-react",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "nextjs": "yarn workspace @mfe-react/host-nextjs dev",
    "vite": "yarn workspace @mfe-react/host-react-vite dev",
    "webpack": "yarn workspace @mfe-react/host-react-webpack dev",
    "mfe:webpack": "concurrently \"yarn webpack\""
  },
  "workspaces": {
    "nohoist": [
      "packages/hosts/**/**",
      "packages/remotes/**/**"
    ],
    "packages": [
      "packages/hosts/*",
      "packages/remotes/*"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
